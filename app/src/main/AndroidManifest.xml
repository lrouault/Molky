<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lrt.molky">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.CapitalesActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".controller.MapActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".controller.C2048Activity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".controller.LabyrintheNiveauxActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".controller.LabyrintheActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".controller.Lab2048Activity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".controller.MolkyActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
    </application>

</manifest>